@{
  Layout="_Layout";
}


@using Factory.Models;

<h1>Machines!</h1>

@if (@Model.Count == 0)
{
  <h3>No Machines in the system</h3>
}

<ul>

  @foreach (Machine machine in Model)
  {
      <li>@Html.ActionLink($"{machine.Name}", "Details", new { id = machine.MachineId }, new { @Class = "btn btn-success"})</li>
  }
  
</ul>

@Html.ActionLink("Add Machine", "Create", "Machines", null, new { @Class = "btn btn-primary"} )